#!/bin/bash

set -e -x -u

cd diegocanarywindowsapp

cf api ${API} --skip-ssl-validation

cf auth ${USER} ${PASSWORD}

cf create-org ${ORG}
cf target -o ${ORG}

cf create-space ${SPACE}
cf target -s ${SPACE}

cf push -s ${STACK_NAME} ${APP_NAME} -b hwc_buildpack
cf scale ${APP_NAME} -i ${INSTANCE_COUNT}

